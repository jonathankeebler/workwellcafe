<html>
        
        <head>
            <title>Workwell Cafe</title>
        </head>
        
        <body>
            form(action="checkout", method="post")
                <div id="Header">
                    <h1>Checked in</h1>
                </div>
                if seats.length
                    <div>
                        <div id="inseats">
                            <p>You're check into seat(s)</p>
                            each seat in seats
                                p
                                    strong #{seat.id}
                        </div>
                        <div id="totaltime">
                            <p>You've been here for</p>
                            each seat in seats
                                p
                                    strong #{seat.time_booked}
                        </div>
                        <button type="submit">Check Out</button>
                    </div>
                else
                    div
                        div You don't have any seats booked. 
                            a(href="/") Book now
        </body>
        
        </html>