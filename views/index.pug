html
    
    head
        title Workwell Cafe - Seats
        meta(name="viewport", content="width=device-width, initial-scale=1")
        link(rel="stylesheet" type="text/css" href="/styles/style.css")
        script(src="https://cdn.auth0.com/js/auth0/8.10.1/auth0.min.js")
        style(type="text/css").
            #Tables {
                position: relative;
                width: 100%;
            }
            #Tables h1 {
                margin: 30px 0 0;
            }
            #Tables span label {
                margin-bottom: 0;
            }
            #CommunalTableLayout {
                width: 355px;
                height: 220px;
            }
            #BoothTableLayout {
                width: 355px;
                height: 80px;
            }
            #GroupTableLayout {
                width: 355px;
                height: 50px
            }
            span {
                position: absolute;
                background: #1ABC9C;
                padding: 3px 7px 3px 3px;
                border-radius: 5px;
            }
            span label {
                color: #fff;
                font-weight: 100;
                font-family: Arial, sans-serif;
                font-size: 14px;
                padding-left: 5px;
            }
            span.taken {
                background: #999;
            }
            /*Communal Tables */
            #seat1 {
                top: 55px;
            }
            #seat2 {
                top: 90px;
            }
            #seat3 {
                top: 125px;
            }
            #seat4 {
                top: 160px;
            }
            #seat5 {
                top: 195px;
            }
            #seat6 {
                top: 230px;
            }
            #seat7 {
                top: 55px;
                left: 100px;
            }
            #seat8 {
                top: 90px;
                left: 100px;
            }
            #seat9 {
                top: 125px;
                left: 100px;
            }
            #seat10 {
                top: 160px;
                left: 100px;
            }
            #seat11 {
                top: 195px;
                left: 100px;
            }
            #seat12 {
                top: 230px;
                left: 100px;
            }
            #seat13 {
                top: 55px;
                left: 200px;
            }
            #seat14 {
                top: 90px;
                left: 200px;
            }
            #seat15 {
                top: 125px;
                left: 200px;
            }
            #seat16 {
                top: 160px;
                left: 200px;
            }
            #seat17 {
                top: 195px;
                left: 200px;
            }
            #seat18 {
                top: 230px;
                left: 200px;
            }
            /* Booth Tables */
            #seat19 {
                top: 360px;
            }
            #seat20 {
                top: 360px;
                left: 100px;
            }
            #seat21 {
                top: 360px;
                left: 200px;
            }
            #seat22 {
                top: 395px;
            }
            /* Group Tables */
            #seat23 {
                top: 525px;
            }
            /* Checkin Button */
            input#CheckinButton {
                background: #1ABC9C;
                color: #fff;
                font-size: 22px;
                border: none;
                padding: 15px 0;
                width: 100%;
                font-family: 'Lato', sans-serif;
                text-shadow: none;
                margin: 30px 0;
                border-radius: 10px;
            }
            /* Logout Button */
            input#LogoutButton {
                border: none;
                background: #fff;
                padding: 5px 0;
                font-size: 14px;
                width: 100%;
                color: #333;
                border-radius: 5px;
                text-decoration: underline;
            }
    
    body

        form(action="checkedin", method="post")

            div(id="Tables")
                div(id="CommunalTables")
                    h1 Communal Tables
                    div(id="CommunalTableLayout")
                div(id="BoothTables")
                    h1 Booths
                    div(id="BoothTableLayout")
                div(id="GroupTables")
                    h1 Group Tables
                    div(id="GroupTableLayout")
                    
                each seat in seats
                    if !seat.customer
                        span(id="seat" + seat.id)
                            input(type='checkbox', name="seat-" + seat.id, id="seat-" + seat.id) 
                            label(for="seat-" + seat.id) Seat #{seat.id}
                    if seat.customer
                        span(id="seat" + seat.id, class="taken")
                            input(type='checkbox', name="seat-" + seat.id, checked, disabled) 
                            label Seat #{seat.id}
                input(type="submit", value="Check in!", id="CheckInButton")

                if logged_in
                form(action="logout", method="post")
                    input(type="submit", value="Logout", id="LogoutButton")